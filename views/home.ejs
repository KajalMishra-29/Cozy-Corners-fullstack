<% layout("/layouts/boilerplate") %>
<%- include('./includes/flash.ejs') %>
<body>
    <div class="row mb-4 mt-3">
        <h1 class="mt-4 text-center fw-bold" style="color: #22668D;">Cozy Corners</h1>
        <h4 class="mb-4 text-center fw-bold" style="color: #ffae17; word-spacing: 4px;">Your Perfect Stay, Just a Click Away!</h4>
    </div>
    <div class="row mt-4">
       <div class="col-xl-10 col-lg-11 mx-auto">
        <div class="swiper">
            <div class="swiper-wrapper">
              <div class="swiper-slide slide-one"></div>
              <div class="swiper-slide slide-two"></div>
              <div class="swiper-slide slide-three"></div>
              <div class="swiper-slide slide-four"></div>
              <div class="swiper-slide slide-five"></div>
              <div class="swiper-slide slide-six"></div>
              <div class="swiper-slide slide-seven"></div>
              <div class="swiper-slide slide-eight"></div>
              <div class="swiper-slide slide-nine"></div>
              <div class="swiper-slide slide-ten"></div>
            </div>
        </div>
       </div>
    </div> 
    <div class="row my-5 border-bottom">
        <div class="d-md-flex align-items-center justify-content-center my-md-5 mb-5">
            <a class="d-block text-center btn-yellow fw-bolder rounded-pill px-3 oy-2 mb-2 me-md-5" href="/listings" style="word-spacing: 3px; font-size: 1.07rem;">Start Exploring</a>
            <a class="d-block text-center btn-yellow fw-bolder rounded-pill px-3 oy-2 mb-2 me-md-5" href="/listings/new" style="word-spacing: 3px; font-size: 1.07rem;">List Your Property</a>
            <a class="d-block text-center btn-yellow fw-bolder rounded-pill px-3 oy-2  mb-2 me-md-5" href="/signup" style="word-spacing: 3px; font-size: 1.07rem;">Join Us Now</a>
        </div>
    </div>
    <div class="row mt-5">
        <h3 class="fw-bold text-center" style="word-spacing: 5px;">Why Choose Cozy Corners?</h3>
        <p class="text-muted text-center">We provide verified listings, secure bookings, and a seamless experience for travelers.</p>
        <div class="row justify-content-center">
            <div class="col-xl-3 col-md-6 col-12 text-center">
                <div class="mx-1 p-2 bg-light rounded-3 mb-3">
                    <i class="fas fa-shield-alt fa-2x text-primary mb-2"></i>
                    <h5 class="fw-semibold">Verified Stays</h5>
                    <p class="text-muted mb-0 px-3">All listings are verified for quality and safety.</p>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 col-12 text-center">
                <div class="mx-1 p-2 bg-light rounded-3 mb-3">
                    <i class="fas fa-calendar-check fa-2x text-success mb-2"></i>
                    <h5 class="fw-semibold">Easy Booking</h5>
                    <p class="text-muted mb-0 px-3">Select dates and book your stay hassle-free.</p>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 col-12 text-center">
                <div class="mx-1 p-2 bg-light rounded-3 mb-3">
                    <i class="fas fa-map-marker-alt fa-2x text-danger mb-2"></i>
                    <h5 class="fw-semibold">Location on Map</h5>
                    <p class="text-muted mb-0 px-3">Explore and locate stays with interactive map.</p>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 col-12 text-center">
                <div class="mx-1 p-2 bg-light rounded-3 mb-3">
                    <i class="fas fa-headset fa-2x text-warning mb-2"></i>
                    <h5 class="fw-semibold">24/7 Support</h5>
                    <p class="text-muted mb-0 px-3">We're here to assist you anytime, anywhere.</p>
                </div>
            </div>
        </div>
    </div>     
</body>
</html>