<% layout("/layouts/boilerplate") %>
<div class="row fixed-top bg-white border-bottom pb-2" style="top: 60px; z-index:10">
    <div class="col">
        <div  class="swiper-index bg-white mt-2">
            <div class="swiper-wrapper">
                <div class="swiper-slide">
                    <a href="/listings/filters/trending">
                        <div class="filter">
                            <div><i class="fa-solid fa-fire"></i></div>
                            <p class="mb-0">Trending</p> 
                        </div>
                    </a>
                </div>
                <div class="swiper-slide">
                    <a href="/listings/filters/room">
                        <div class="filter">
                            <div><i class="fa-solid fa-bed"></i></div>
                            <p class="mb-0">Room</p> 
                        </div>
                    </a>
                </div>
                <div class="swiper-slide">
                    <a href="/listings/filters/iconic city">
                        <div class="filter">
                            <div><i class="fa-solid fa-mountain-city"></i></div>
                            <p class="mb-0">Iconic City</p> 
                        </div>
                    </a>
                </div>
                <div class="swiper-slide">
                    <a href="/listings/filters/mountain">
                        <div class="filter">
                            <div><i class="fa-solid fa-mountain"></i></div>
                            <p class="mb-0">Mountain</p> 
                        </div>
                    </a>
                </div>
                <div class="swiper-slide">
                    <a href="/listings/filters/amazing pool">
                        <div class="filter">
                            <div><i class="fa-solid fa-person-swimming"></i></div>
                            <p class="mb-0">Amazing Pool</p> 
                        </div>
                    </a>
                </div>
                <div class="swiper-slide">
                    <a href="/listings/filters/camping">
                        <div class="filter">
                            <div><i class="fa-solid fa-campground"></i></div>
