<% layout("/layouts/boilerplate") %>
<body class="index">
    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 mt-2 mb-5 g-5">
         <% allListings.forEach(listing => { %>
             <a href="/listings/<%= listing.id %>" class="listing-card">
                 <div class="card rounded-3">
                    <div class="img-box">
                        <img src="<%= listing.image %>" class="card-img-top rounded-top-3" alt="...">
                        <div class="listing-card-overlay rounded-top-3">
                            <h3 class="card-text"><%= listing.country %></h3>
                            <p class="card-text"><%= listing.location %></p>
                        </div>
                    </div>
                     <div class="card-body pt-1 rounded-bottom-3">
                         <div class="card-text fw-semibold"><%= listing.title %></div>
                         <div class="card-text fw-semibold">&#8377; <%= listing.price.toLocaleString("en-in") %></div>
                     </div>
                 </div>
             </a>
         <% }) %>
    </div>
</body>
