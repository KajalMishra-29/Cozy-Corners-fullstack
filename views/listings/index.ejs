<% layout("/layouts/boilerplate") %>
<body class="index">
    <h1 class="mt-4 text-center fw-bold" style="color: #22668D; font-size: 3rem;">Cozy Corners</h1>
    <h4 class="mb-4 text-center fw-bold" style="color: #ffbf49; word-spacing: 4px;">Your Perfect Stay, Just a Click Away!</h4>
    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 mt-2 mb-5 g-5">
         <% allListings.forEach(listing => { %>
             <a href="/listings/<%= listing.id %>" class="text-decoration-none">
                 <div class="card rounded-3 index-card" >
                    <div class="img-box">
                        <img src="<%= listing.image.url %>" class="card-img-top rounded-top-3" alt="...">
                        <div class="listing-card-overlay rounded-top-3">
                            <h2 class="card-text fw-bolder"><%= listing.country %></h2>
                            <h5 class="card-text fw-bolder"><%= listing.location %></h5>
                        </div>
                    </div>
                     <div class="card-body pt-1 rounded-bottom-3">
                         <div class="card-text fw-semibold"><%= listing.title %></div>
                         <div class="card-text fw-semibold">&#8377; <%= listing.price.toLocaleString("en-in") %></div>
                     </div>
                 </div>
             </a>
         <% }) %>
    </div>
</body>
