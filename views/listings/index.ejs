<% layout("/layouts/boilerplate") %>
<body class="index">
    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 mt-2 mb-5 g-sm-5">
         <% allListings.forEach(listing => { %>
             <a href="/listings/<%= listing.id %>" class="text-decoration-none mb-sm-0 mb-5">
                 <div class="card rounded-3" >
                    <div class="img-box">
                        <img src="<%= listing.image.url %>" class="card-img-top rounded-top-3" alt="...">
                        <div class="listing-card-overlay rounded-top-3">
                            <h5 class="card-text fw-bolder"><%= listing.state %></h5>
                            <h2 class="card-text fw-bolder"><%= listing.country %></h2>
                        </div>
                    </div>
                     <div class="card-body pt-1 rounded-bottom-3">
                         <div class="card-text fw-semibold"><%= listing.title %></div>
                         <div class="card-text fw-semibold">&#8377; <%= listing.price.toLocaleString("en-in") %></div>
                     </div>
                 </div>
             </a>
         <% }) %>
    </div>
</body>
